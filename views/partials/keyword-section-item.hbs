<div class="mb-1 break-inside-avoid">
  {{#if name}}
    <h3 class="inline-block font-sm font-bold mb-1">{{name}}</h3>
  {{/if}}
  {{#if keywords.length}}
      {{#each keywords}}
        <span class="inline-block mr-1 mb-1 py-0.5 px-1 bg-orange-100 rounded text-orange-700">{{.}}</span>
      {{/each}}
  {{/if}}
</div>